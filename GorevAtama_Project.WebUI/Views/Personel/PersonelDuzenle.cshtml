@model GorevAtama_Project.Entity.Personel

<form asp-controller="Personel" asp-action="PersonelDuzenle" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Personel Ad</label>
                <input type="text" class="form-control" asp-for="PersonelAd" />
            </div>

            <div class="form-group">
                <label>Personel Soyad</label>
                <input type="text" class="form-control" asp-for="PersonelSoyad" />
            </div>

            <div class="form-group">
                <label>İşlem</label>
                @Html.DropDownListFor(x => x.IslemID, (List<SelectListItem>)ViewBag.cv, new {@class = "form-control"})
            </div>
            <input type="hidden" name="PersonelID" value="@Model.PersonelID"/>
            <button class="btn btn-success" type="submit">Personel Düzenle</button>
        </div>
    </div>
</form>